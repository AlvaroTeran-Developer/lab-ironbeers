<div class='card col-lg-4 mt-2 border-0'>
  <img class='card-img-top img-beer mb-2' src='{{this.image_url}}' alt='' />
  <div class='card-body'>
    <a href='/beers/beer-{{this.id}}'><h5
        class='card-title'
      >{{this.name}}</h5></a>
    <p class='card-text'>{{this.tagline}}</p>
    <p class='card-text'>{{this.description}}</p>
  </div>
</div>